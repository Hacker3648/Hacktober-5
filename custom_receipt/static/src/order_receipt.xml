<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-inherit="point_of_sale.ReceiptHeader" t-inherit-mode="extension">
		<xpath expr="//div[@t-if='props.data.is_gcc_country']/div" position="replace">
			<div>خدم بواسطة <t t-esc="props.data.cashier"/></div>
		</xpath>
	</t>

	<t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
		<xpath expr="//div[@class='pos-receipt-amount pos-receipt-amount-arabic']" position="replace">
			<div t-if="props.data.is_gcc_country" class="pos-receipt-amount pos-receipt-amount-arabic" t-translation="off">
                الإجمالي
                <span t-esc="props.formatCurrency(props.data.amount_total)" class="pos-receipt-right-align"/>
            </div>
		</xpath>

		<xpath expr="//div[@class='pos-receipt-amount receipt-change pos-receipt-amount-arabic']" position="replace">
			<div t-if="props.data.is_gcc_country" class="pos-receipt-amount pos-receipt-amount-arabic" t-translation="off">
                الإجمالي
                <span t-esc="props.formatCurrency(props.data.amount_total)" class="pos-receipt-right-align"/>
            </div>
		</xpath>

		<xpath expr="//div[@style='display: inline-flex;']" position="replace">
			<div t-if="props.data.is_gcc_country" class="pos-receipt-amount pos-receipt-amount-arabic" t-translation="off">
                الإجمالي
                <span t-esc="props.formatCurrency(props.data.amount_total)" class="pos-receipt-right-align"/>
            </div>
		</xpath>

		<xpath expr="//div[@class='paymentlines']/t" position="replace">
			<span>.</span>
		</xpath>
	</t>

	<t t-inherit="point_of_sale.ReceiptHeader" t-inherit-mode="extension">
		<xpath expr="//span[@id='title_english']" position="replace">
        </xpath>
	</t>
</templates>